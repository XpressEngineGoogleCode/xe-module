<filter name="group_send" module="pointsend" act="procPointsendAdminSendGroup" confirm_msg_code="confirm_pointsend">
	<form>
		<node target="cart" required="true" />
		<node target="messag_title" required="true" maxlength="250" />
		<node target="message_body" required="true" maxlength="250" />
		<node target="point" required="true" filter="number" />
	</form>
	<parameter>
		<param name="cart" target="cart" />
		<param name="message_title" target="message_title" />
		<param name="message_body" target="message_body" />
		<param name="point" target="point" />
	</parameter>
	<response callback_func="completeSend">
		<tag name="error" />
		<tag name="message" />
	</response>
</filter>